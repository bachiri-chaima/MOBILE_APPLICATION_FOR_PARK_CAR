<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#ffff"
    android:id="@+id/layout_update_reservation_admin">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        app:cardCornerRadius="15dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">

            <ImageView
                android:id="@+id/image_reservation_admin"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:src="@drawable/reservation"
                android:layout_marginStart="2dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/affiche_matricule_admin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="4dp"
                android:text="Matricule "
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/image_reservation_admin"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/affiche_email_reser_admin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email "
                android:textColor="@color/black"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:textSize="15dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/affiche_date_reservation_admin"
                app:layout_constraintStart_toEndOf="@+id/image_reservation_admin"
                app:layout_constraintTop_toBottomOf="@+id/affiche_matricule_admin" />

            <TextView
                android:id="@+id/affiche_heure_srt_admin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="Heure sortie "
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/image_reservation_admin"
                app:layout_constraintTop_toBottomOf="@+id/affiche_heure_ent_admin" />

            <TextView
                android:id="@+id/affiche_place_admin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="Place "
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/image_reservation_admin"
                app:layout_constraintTop_toBottomOf="@+id/affiche_heure_srt_admin" />

            <TextView
                android:id="@+id/affiche_date_reservation_admin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="Date "
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/image_reservation_admin"
                app:layout_constraintTop_toBottomOf="@+id/affiche_email_reser_admin" />

            <TextView
                android:id="@+id/affiche_heure_ent_admin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="Heure entrer "
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/image_reservation_admin"
                app:layout_constraintTop_toBottomOf="@+id/affiche_date_reservation_admin" />

            <TextView
                android:id="@+id/matricule_admin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:layout_marginTop="0dp"
                android:text="TextView"
                app:layout_constraintStart_toEndOf="@+id/affiche_matricule_admin"
                app:layout_constraintTop_toTopOf="@+id/affiche_matricule_admin" />

            <TextView
                android:id="@+id/res_email_admin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:layout_marginTop="0dp"
                android:text="TextView"
                app:layout_constraintStart_toEndOf="@+id/affiche_email_reser_admin"
                app:layout_constraintTop_toTopOf="@+id/affiche_email_reser_admin" />

            <TextView
                android:id="@+id/date_admin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:text="TextView"
                app:layout_constraintStart_toEndOf="@+id/affiche_date_reservation_admin"
                app:layout_constraintTop_toTopOf="@+id/affiche_date_reservation_admin" />

            <TextView
                android:id="@+id/heure_admin_entrer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:text="TextView"
                app:layout_constraintStart_toEndOf="@+id/affiche_heure_ent_admin"
                app:layout_constraintTop_toTopOf="@+id/affiche_heure_ent_admin" />

            <TextView
                android:id="@+id/heure_admin_sortie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:text="TextView"
                app:layout_constraintStart_toEndOf="@+id/affiche_heure_srt_admin"
                app:layout_constraintTop_toTopOf="@+id/affiche_heure_srt_admin" />

            <TextView
                android:id="@+id/affiche_prix_admin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="Prix "
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/image_reservation_admin"
                app:layout_constraintTop_toBottomOf="@+id/affiche_place_admin" />

            <TextView
                android:id="@+id/prix_admin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:text="TextView"
                app:layout_constraintStart_toEndOf="@+id/affiche_prix_admin"
                app:layout_constraintTop_toTopOf="@+id/affiche_prix_admin" />

            <TextView
                android:id="@+id/place_admin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:text="TextView"
                app:layout_constraintStart_toEndOf="@+id/affiche_place_admin"
                app:layout_constraintTop_toTopOf="@+id/affiche_place_admin" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>