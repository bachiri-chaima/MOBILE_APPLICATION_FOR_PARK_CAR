<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#0000"
    android:layout_height="match_parent"
    tools:context=".Forget_password">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:padding="10dp"
            android:paddingStart="50dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/password" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mot de passe oublier"
            android:textColor="@color/black"
            android:textSize="23dp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:fontFamily="@font/comfortaa_light"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:text="fournir l'email de votre compte pour lequel vous souhaitez rÃ©initialiser votre mot de passe"
            android:textColor="#3E3A3A"
            android:textSize="13dp"
            android:fontFamily="@font/comfortaa_light"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_gravity="center"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/verifier_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="48dp"
            android:layout_marginEnd="32dp"
            android:hint="Email"
            app:startIconDrawable="@drawable/ic_baseline_mail_outline_24"
            app:endIconMode="clear_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/add_matricule_txt"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                />
        </com.google.android.material.textfield.TextInputLayout>



        <Button
            android:id="@+id/verifier_email_bouton"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:background="@drawable/buttum_tourne2"
            android:text="Verifier"
            android:textColor="@color/white"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="30dp"
            android:layout_gravity="center"/>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>