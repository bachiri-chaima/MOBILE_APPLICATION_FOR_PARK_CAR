<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#ffff"
    android:id="@+id/layout_update_reservation_client">

    <androidx.cardview.widget.CardView
        android:layout_width="394dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        app:cardCornerRadius="15dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:padding="12dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp">

            <ImageView
                android:id="@+id/image_reservation_client"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:src="@drawable/reservation"
                android:layout_marginStart="2dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/affiche_matricule_client"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="4dp"
                android:text="Matricule "
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/image_reservation_client"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/affiche_heure_srt_client"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="Heure sortie "
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/image_reservation_client"
                app:layout_constraintTop_toBottomOf="@+id/affiche_heure_ent_client" />

            <TextView
                android:id="@+id/affiche_place_client"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="Place "
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/image_reservation_client"
                app:layout_constraintTop_toBottomOf="@+id/affiche_heure_srt_client" />

            <TextView
                android:id="@+id/affiche_date_reservation_client"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="Date "
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/image_reservation_client"
                app:layout_constraintTop_toBottomOf="@+id/affiche_matricule_client" />

            <TextView
                android:id="@+id/affiche_heure_ent_client"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="Heure entrer "
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/image_reservation_client"
                app:layout_constraintTop_toBottomOf="@+id/affiche_date_reservation_client" />

            <TextView
                android:id="@+id/matricule_client"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:layout_marginTop="0dp"
                android:text="TextView"
                app:layout_constraintStart_toEndOf="@+id/affiche_matricule_client"
                app:layout_constraintTop_toTopOf="@+id/affiche_matricule_client" />

            <TextView
                android:id="@+id/date_client"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:text="TextView"
                app:layout_constraintStart_toEndOf="@+id/affiche_date_reservation_client"
                app:layout_constraintTop_toTopOf="@+id/affiche_date_reservation_client" />

            <TextView
                android:id="@+id/heure_client_entrer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:text="TextView"
                app:layout_constraintStart_toEndOf="@+id/affiche_heure_ent_client"
                app:layout_constraintTop_toTopOf="@+id/affiche_heure_ent_client" />

            <TextView
                android:id="@+id/heure_client_sortie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:text="TextView"
                app:layout_constraintStart_toEndOf="@+id/affiche_heure_srt_client"
                app:layout_constraintTop_toTopOf="@+id/affiche_heure_srt_client" />

            <TextView
                android:id="@+id/affiche_prix_client"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="Prix "
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/image_reservation_client"
                app:layout_constraintTop_toBottomOf="@+id/affiche_place_client" />

            <TextView
                android:id="@+id/prix_client"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:text="TextView"
                app:layout_constraintStart_toEndOf="@+id/affiche_prix_client"
                app:layout_constraintTop_toTopOf="@+id/affiche_prix_client" />

            <TextView
                android:id="@+id/place_client"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:text="TextView"
                app:layout_constraintStart_toEndOf="@+id/affiche_place_client"
                app:layout_constraintTop_toTopOf="@+id/affiche_place_client" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>