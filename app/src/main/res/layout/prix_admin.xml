<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="20dp"
    android:id="@+id/prix_admin_dialoque">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/alert_pdw"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/dialoque_background"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="20dp">

        <TextView
            android:id="@+id/titre_dialoguead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/prix_clien_background"
            android:padding="10dp"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/icone_dialoque"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginEnd="16dp"
            android:contentDescription="@string/app_name"
            app:layout_constraintBottom_toBottomOf="@+id/titre_dialoguead"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/titre_dialoguead" />

        <TextView
            android:id="@+id/text_meesage1"
            android:layout_width="73dp"
            android:layout_height="24dp"
            android:layout_marginBottom="40dp"
            android:paddingStart="20dp"
            android:text="PRIX :"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/titre_dialogue"
            app:layout_constraintVertical_bias="0.833"
            tools:layout_editor_absoluteX="50dp" />

        <TextView
            android:id="@+id/text_meesage_prix"
            android:layout_width="177dp"
            android:layout_height="24dp"
            android:layout_marginBottom="40dp"
            android:paddingStart="20dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/text_meesage1"
            app:layout_constraintTop_toBottomOf="@+id/titre_dialogue"
            app:layout_constraintVertical_bias="0.833" />
        <TextView
            android:id="@+id/text_meesage"
            android:layout_width="30dp"
            android:layout_height="24dp"
            android:layout_marginBottom="40dp"
            android:textColor="@color/black"
            android:text="DA"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/text_meesage_prix"
            app:layout_constraintTop_toBottomOf="@+id/titre_dialogue"
            app:layout_constraintVertical_bias="0.833" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>